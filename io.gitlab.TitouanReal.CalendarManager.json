{
  "id": "io.gitlab.TitouanReal.CalendarManager",
  "runtime": "org.gnome.Platform",
  "runtime-version": "master",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
  "command": "calendar-manager",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=dri",
    "--socket=wayland",
    "--talk-name=io.gitlab.TitouanReal.CcmRead",
    "--talk-name=io.gitlab.TitouanReal.CcmWrite",
    "--add-policy=Tracker3.dbus:io.gitlab.TitouanReal.CcmRead=ccm:Calendar"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
    "build-args": ["--share=network"],
    "env": {
      "RUST_BACKTRACE": "1",
      "RUST_LOG": "calendar-manager=debug"
    }
  },
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "sassc",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/lazka/sassc.git",
          "branch": "meson"
        }
      ]
    },
    {
      "name": "libadwaita",
      "buildsystem": "meson",
      "config-opts": ["-Dtests=false", "-Dexamples=false"],
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/GNOME/libadwaita.git",
          "branch": "wip/alice/flowbox-style"
        }
      ]
    },
    {
      "name": "calendar-manager",
      "builddir": true,
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "file:///home/titouan/Projects/Calendars-Contacts/calendars-contacts-next"
        }
      ],
      "config-opts": ["--libdir=lib"]
    }
  ]
}
