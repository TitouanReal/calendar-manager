using Gtk 4.0;

template $YearViewMonthCell: Button {
  child: Box {
    orientation: vertical;
    vexpand: true;

    Label {
      label: bind $get_month_name(template.month) as <string>;
      xalign: 0.0;

      styles [
        "year-view-month-cell-month-label",
      ]
    }

    Grid days_grid {
      row-homogeneous: true;
      column-homogeneous: true;
      vexpand: true;
    }
  };

  styles [
    "flat",
  ]
}
