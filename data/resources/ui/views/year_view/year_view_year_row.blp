using Gtk 4.0;

template $YearViewYearRow: Box {
  margin-start: 24;
  margin-end: 24;
  spacing: 12;
  orientation: vertical;

  Label year_label {
    label: bind $get_year_label_narrow(template.year) as <string>;
    xalign: 0.0;
    hexpand: true;

    styles [
      "year-view-year-label",
    ]
  }

  Separator {
    orientation: horizontal;
  }

  Grid month_grid {
    column-homogeneous: true;
    row-homogeneous: true;
  }
}
